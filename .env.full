# 完整部署配置
COMPOSE_PROFILES=full

# 镜像配置
DOCKER_USERNAME=kalijerry
TAG=dev

# 端口配置
BACKEND_PORT=8080
FRONTEND_PORT=80
POSTGRES_PORT=5432
REDIS_PORT=6379

# 网络配置
NETWORK_NAME=todolist-network
BACKEND_ALIAS=backend
FRONTEND_ALIAS=frontend

# 容器名称
BACKEND_CONTAINER_NAME=todolist-backend
FRONTEND_CONTAINER_NAME=todolist-frontend
POSTGRES_CONTAINER_NAME=todolist-postgres
REDIS_CONTAINER_NAME=todolist-redis

# 数据库配置
POSTGRES_DB=todolist
POSTGRES_USER=todolist
POSTGRES_PASSWORD=your_secure_password_here

# 应用配置
GIN_MODE=release

# Nginx配置
NGINX_CONFIG=./frontend/nginx.auto.conf